@article{peatmanEstimatingTrendsMagnitudes2023,
  title = {Estimating Trends and Magnitudes of Bycatch in the Tuna Fisheries of the {{Western}} and {{Central Pacific Ocean}}},
  author = {Peatman, Tom and Allain, Valerie and Bell, Lui and Muller, Berry and Panizza, Aur{\'e}lien and Phillip, Naiten B. and Pilling, Graham and Nicol, Simon},
  year = {2023},
