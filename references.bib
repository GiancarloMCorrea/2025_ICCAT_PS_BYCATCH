@article{stockUtilitySpatialModelbased2019,
  title = {The Utility of Spatial Model-Based Estimators of Unobserved Bycatch},
  author = {Stock, Brian C and Ward, Eric J and Thorson, James T and Jannot, Jason E and Semmens, Brice X},
  editor = {Anderson, Emory},
