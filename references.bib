  langid = {english},
  file = {C:\Users\gmoron\Zotero\storage\ZT526KB9\Dulvy et al. - 2014 - Extinction risk and conservation of the world’s sh.pdf}
}

@article{dumontModelingBycatchAbundance2024,
  title = {Modeling Bycatch Abundance in Tropical Tuna Purse Seine Fisheries on Floating Objects Using the {{$\Delta$}} Method},
